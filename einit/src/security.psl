/* Security configuration of the "echo" example. */

/* Definition of the execute interface. */
execute: kl.core.Execute

/* Import the file with the declaration of basic security policy aliases. */
use nk.base._

/* Declaration of entities. */
use EDL Einit
use EDL kl.core.Core

use EDL echo.Client
use EDL echo.Client2
use EDL echo.Server

/* Execution of entities allowed. */
execute {
    grant ()
}

/* Request messages allowed. */
request src=echo.Client {
    grant ()
}


request src=echo.Client2 dst=kl.core.Core {
    grant ()
}

request src=echo.Client2 dst=echo.Server {
    grant ()
}

request src=Einit {
    grant ()
}

request src=kl.core.Core {
    grant ()
}

request src=echo.Server {
    grant ()
}


/* Response messages allowed. */
response {
    grant ()
}

error {
    grant ()
}

/* Calls to the security interface are ignored. */
security {
    grant ()
}
